<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:fillColor">@color/colorOranges</item>
        <item name="tabTextAppearance">@style/TabText</item>
        <item name="tabSelectedTextColor">@color/colorOranges</item>
        <item name="tabIndicatorHeight">1px</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:fillColor">@color/colorGray_</item>
        <item name="android:textColor">@color/colorGray_</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="checkboxItemsMyStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:background">@color/colorGray_</item>
        <item name="android:colorBackground">@color/colorGray_</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">3dp</item>
        <item name="android:backgroundTint">@color/colorblue_</item>
        <item name="android:buttonTint">@color/colorWhite</item>
    </style>
</resources>