<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:id="@+id/tovarItemContainer"
    android:visibility="visible"
    android:layout_margin="5dp"
    android:padding="10dp"
    android:background="@color/colorWhite">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tovarItemName"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:visibility="visible"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/tovarItemImage"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_below="@+id/tovarItemName"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="-10dp"
        android:visibility="visible" />


    <TextView
        android:id="@+id/tovarItemPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tovarItemImage"
        android:textAlignment="textEnd"
        android:textSize="16sp"
        android:visibility="visible" />
    <TextView
        android:id="@+id/tvSaleOrange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tovarItemName"
        android:layout_marginTop="115dp"
        android:background="@color/colorOranges"
        android:textColor="@color/colorWhite"
        android:gravity="bottom"
        android:padding="5dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tvSaleRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tovarItemName"
        android:layout_marginTop="-10dp"
        android:background="@color/colorRed_"
        android:gravity="bottom"
        android:padding="5dp"
        android:textColor="@color/colorWhite"
        android:visibility="invisible" />
</RelativeLayout>